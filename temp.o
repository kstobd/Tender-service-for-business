import (
    "database/sql"
    _ "github.com/lib/pq" // драйвер PostgreSQL для sql пакета
    "github.com/golang-migrate/migrate/v4"
    _ "github.com/golang-migrate/migrate/v4/source/file" // для миграций из файлов
    _ "github.com/golang-migrate/migrate/v4/database/postgres" // драйвер PostgreSQL для миграций
    "log"
)

func main() {
	connStr := "postgres://user:password@localhost:5432/dbname?sslmode=disable"
	db, err := sql.Open("postgres", connStr)
	if err != nil {
		log.Fatalf("failed to connect to database: %v", err)
	}
	defer db.Close()

	m, err := migrate.New("file://db/migrations", connStr)
	if err != nil {
		log.Fatalf("Could not create migration instance: %v", err)
	}

	log.Println("Migration instance created successfully")

	if err := m.Up(); err != nil && err != migrate.ErrNoChange {
		log.Fatalf("Could not run migrations: %v", err)
	}

	log.Println("Migrations applied successfully")
}
